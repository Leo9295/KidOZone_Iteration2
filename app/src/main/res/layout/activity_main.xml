<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activityService.MainActivity"
    android:background="@drawable/mainbackground">

    <TextView
        android:id="@+id/empty1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/empty2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/empty1"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Let's play Games"
        android:gravity="center"
        android:textColor="@color/colorAccent"
        android:textSize="30sp"
        android:textStyle="italic" />

    <ImageButton
        android:id="@+id/imageLunchGame"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="#00000000"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/lunchgame" />

    <Button
        android:id="@+id/LunchGame"
        android:layout_width="160dp"
        android:layout_height="38dp"
        android:layout_below="@+id/imageLunchGame"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/button_style6"
        android:text="LunchBox"
        android:textAllCaps="false"
        android:textColor="@color/colorAccent"
        android:textSize="14sp" />

    <ImageButton
        android:id="@+id/imageWasteGame"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imageLunchGame"
        android:layout_marginTop="60dp"
        android:background="#00000000"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/wastegame" />

    <Button
        android:id="@+id/WasteGame"
        android:layout_width="160dp"
        android:layout_height="38dp"
        android:layout_below="@+id/imageWasteGame"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/button_style6"
        android:text="Waste type"
        android:textAllCaps="false"
        android:textColor="@color/colorAccent"
        android:textSize="14sp" />

    <ImageButton
        android:id="@+id/imagePuzzleGame"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_below="@+id/imageWasteGame"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="#00000000"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/puzzlegame" />

    <Button
        android:id="@+id/PuzzleGame"
        android:layout_width="160dp"
        android:layout_height="38dp"
        android:layout_below="@+id/imagePuzzleGame"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/button_style6"
        android:text="Puzzle Game"
        android:textAllCaps="false"
        android:textColor="@color/colorAccent"
        android:textSize="14sp" />


</RelativeLayout>